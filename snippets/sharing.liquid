<div class="sharing">
  
  <span class="label">{{ 'general.social.share_link' | t }}</span>
  
  
  {% if template contains 'product' or sharing.featured_image %}
  
  {% assign url_to_share = shop.url | append: product.url %}
  {% capture img_to_share %}http:{{ product.featured_image | product_img_url: 'master' }}{% endcapture %}
  {% assign title_to_share = product.title %}

  {% else %}
  {% assign url_to_share = shop.url | append: sharing.url %}
  {% assign img_to_share = false %}
  
  {% if template contains 'article' or template contains 'blog' %}
  {% if article.image %}
    {% assign img_to_share = article.image | img_url: 'master' %}
  {% endif %}
  {% endif %}
  
  {% assign title_to_share = sharing.title %}
  {% endif %}

  {% capture social_check_out %}{{ 'general.social.check_out' | t: title: title_to_share }}{% endcapture %}
  <ul class="plain inline">

    <li class="facebook"><a title="{{ 'general.social.on_facebook' | t | escape }}" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ url_to_share | url_param_escape }}"><i class="icon-facebook"></i></a></li>

    <li class="twitter"><a title="{{ 'general.social.on_twitter' | t | escape }}" target="_blank" href="https://twitter.com/intent/tweet?text={{ social_check_out | url_param_escape }}: {{ url_to_share | url_param_escape }}"><i class="icon-twitter"></i></a></li>

    {% if img_to_share != false %}
    <li class="pinterest"><a title="{{ 'general.social.on_pinterest' | t | escape }}" target="_blank" href="//pinterest.com/pin/create/button/?url={{ url_to_share | url_param_escape }}&amp;media={{ img_to_share | url_param_escape }}&amp;description={{ title_to_share | url_param_escape }}"><i class="icon-pinterest"></i></a></li>
    {% endif %}

    <li class="google"><a title="{{ 'general.social.on_google' | t | escape }}" target="_blank" href="https://plus.google.com/share?url={{ url_to_share | url_param_escape }}"><i class="icon-googleplus"></i></a></li>

    <li class="email"><a title="{{ 'general.social.by_email' | t | escape }}" href="mailto:?subject={{ social_check_out | url_param_escape }}&amp;body={{ social_check_out | url_param_escape }}:%0D%0A%0D%0A{{ url_to_share | url_param_escape }}"><i class="icon-mail"></i></a></li>

  </ul>
</div>