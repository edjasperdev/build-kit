<div class="sub-nav" data-is-subnav-for="{{ child_list_handle }}">
  <div class="header">
    <a class="close-sub-nav" href="#"><span class="btn alt"><i class="icon-arrow3-left slim"></i></span> {{ 'layout.mobile_navigation.back' | t }}</a>
  </div>

  <ul class="sub-nav-list plain">
    {% for innerlink in linklists[child_list_handle].links %}
    <li class="sub-nav-item{% if innerlink.active %} active{% endif %}">
      <a class="sub-nav-item-link" href="{{ innerlink.url }}">{{ innerlink.title }}</a>
      {% assign innerlink_title = innerlink.title | strip_html %}
      {% include 'has-drop-down' with innerlink_title %}
      {% if has_drop_down %}
      <button class="open-sub-nav alt" data-sub-nav="{{ child_list_handle }}"><i class="icon-arrow3-right"></i></button>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
</div>